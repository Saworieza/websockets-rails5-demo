
<div class="text-center page-header">
    <h1 class="chat-title">IClack</h1>
</div>

<div class="row">
  <div class="col-sm-7">
    <div class="panel panel-primary">
      <div class="panel-body">
        <div id="messages">
          <%= render @messages %>
        </div>

        <form>
          <label>Say something: </label> <input id="message" type="text" data-behavior="room_speaker" />
          <button id="send">Send</button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-sm-5">
    <div class="panel panel-primary">
      <div class="panel-body">
        <h4>Online users:</h4>
        <br />
        <div id="appearances">
          <%= render @appearances %>
        </div>
      </div>
    </div>

    <% if current_user %>
      <p><%= link_to "Log Out", destroy_user_session_path, method: :delete %></p>
    <% end %>

  </div>
</div>
